<%- include("partials/header") -%>
  <h1>Compose</h1>
  <form action="/compose" method="post">

    <label for="compose-title">Title</label>
    <input class="compose" id="compose-title" type="text" name="postTitle">

    <label for="compose-post">Post</label>
    <textarea class="compose" id="compose-post" name="postText" rows="8" cols="80"></textarea>
    <button class="btn btn-lg btn-primary" type="submit" name="submit">Publish</button>
  </form>

<%- include("partials/footer") -%>
